<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="db.com.dyhome">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:name="db.com.dyhome.DyGodApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="db.com.dyhome.module.main.AdActivity"
            android:theme="@style/adTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="db.com.dyhome.module.main.SplashActivity"
            android:theme="@style/adTheme" />

        <activity android:name="db.com.dyhome.module.main.MainActivity" />
        <activity android:name="db.com.dyhome.module.common.MovieInfoActivity" />
        <activity android:name="db.com.dyhome.module.start.StartVideoActiviy" />
        <activity android:name="db.com.dyhome.module.search.SearchActivity" />
        <activity android:name="db.com.dyhome.module.common.EnlargementImageActivity"
            android:theme="@style/adTheme"
            />
    </application>
</manifest>