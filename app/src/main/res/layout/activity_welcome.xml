<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.main.SplashActivity">

  <android.support.v4.view.ViewPager
      android:layout_centerInParent="true"
      android:id="@+id/welcome_ViewPager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />
    <Button
        android:visibility="gone"
        android:padding="5dp"
        android:textSize="@dimen/font2"
        android:textColor="@color/textcolor7"
        android:background="@drawable/public_button_selector"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:id="@+id/welcome_comeOn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="@string/welcome_comein"
        />

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/welcome_dot_layout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>

        <View
            android:id="@+id/welcome_redPoint"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/welcome_dot" />
    </RelativeLayout>
</RelativeLayout>
