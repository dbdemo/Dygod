<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/drawable_notificationdialog_bj_shape">

    <LinearLayout
        android:id="@+id/lin_title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="测试标题"
            android:textColor="@color/bgcolor2"
            android:textSize="@dimen/font1" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/notification_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:maxHeight="260dp"
            android:minHeight="80dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:scrollbars="vertical"
            android:text="提示内容提示内容提示提示内容提示内容提示内容"
            android:textColor="@color/bgcolor2"
            android:textSize="@dimen/font2" />
    </LinearLayout>

    <view
        android:id="@+id/dialog_cancle_firm_line"
        android:layout_below="@id/lin_title_content"
        android:textColor="@color/bgcolor3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_below="@id/dialog_cancle_firm_line"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/notification_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"

            android:textColor="@color/bgcolor2" />

        <view
            android:id="@+id/dialog_cancle_firm_portrait_line"
            android:textColor="@color/bgcolor3"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/notification_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/bgcolor2" />
    </LinearLayout>
</RelativeLayout>